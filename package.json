{
    "name": "website",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "serve-web": "npx http-server frontend -p 5500",
        "serve-web:py": "python -m http.server 5500 --directory web",
        "serve-web:auto": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/serve-web.ps1",
        "dev": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/dev-start.ps1",
        "train": "powershell -NoProfile -ExecutionPolicy Bypass -File tools/train.ps1",
        "start-node": "node server/server.js",
        "start-api": "uvicorn api.app:app --reload --port 8000",
        "start-all": "concurrently \"npm:serve-web\" \"npm:start-node\" \"npm:start-api\""
    },
    "dependencies": {
        "next": "14.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "http-server": "0.12.3",
        "concurrently": "8.2.0",
        "node-fetch": "^3.3.1",
        "cors": "2.8.5",
        "express": "4.18.2"
    },
    "devDependencies": {
        "@types/node": "25.2.0",
        "@types/react": "19.2.10",
        "typescript": "5.9.3"
    }
}